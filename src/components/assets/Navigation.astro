---
import "../assets/Btn.astro";
import "../assets/Link.astro";
import "../../css/global.css";
import "../../css/variables.css";
import Link from "../assets/Link.astro";
---

<header class="header">
  <nav class="desktop_nav">
    <div class="desktop_nav_wrapper">
      <ul class="ul_left">
        <li><a href="#what"><Link variant="primary">What is Contra?</Link></a></li>
        <li><a href="#who"><Link variant="primary">Who are we?</Link></a></li>
      </ul>

      <div class="logo">
        <a href="#header"><img src="/logo.png" alt="logo" /></a>
      </div>
      <ul class="ul_right">
        <li><a href="#events"><Link variant="primary">Our events</Link></a></li>
        <li><a href="#guests"><Link variant="primary">Guest of Contra</Link></a></li>
      </ul>
    </div>
  </nav>

  <!-- Mobil menu layout -->

  <div class="nav_menu">
    <ul>
      <li><a href="#what"><Link variant="primary">What is Contra?</Link></a></li>
      <li><a href="#who"><Link variant="primary">Who are we?</Link></a></li>
      <li><a href="#events"><Link variant="primary">Our events</Link></a></li>
      <li><a href="#guests"><Link variant="primary">Guest of Contra</Link></a></li>
    </ul>
  </div>

  <div class="navigation">
    <a href="#header"><img src="/logo.png" alt="logo" /></a>
    <div class="burger_menu">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </div>
  </div>
</header>

<style>
  img {
    width: 70px;
    height: auto;
  }
  .desktop_nav {
    display: none;
  }
  .navigation {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding: var(--gap-16);
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .bar {
    display: block;
    width: 40px;
    height: 4px;
    margin: 8px auto;
    background-color: var(--blue);
    border-radius: 10px;
    transition: all 0.4 ease-in-out;
    transform-origin: center;
  }
  .nav_menu {
    display: block;
    position: fixed;
    top: 0;
    right: 0;
    width: 80%;
    max-width: 248px;
    max-height: 488px;
    transform: translateX(100%);
    background-color: var(--white-70);
    backdrop-filter: blur(4px);
    transition: transform 0.3s ease-in-out;
  }
  .nav_menu ul {
    display: flex;
    flex-direction: column;
    gap: var(--gap-64);
    padding-left: var(--gap-16);
    padding-right: var(--gap-16);
    padding-top: var(--gap-96);
    padding-bottom: var(--gap-64);
  }
  .nav_menu.active {
    display: block;
    right: 0;
    top: 0;
    transform: translateX(0%);
  }
  .burger_menu {
    display: block;
    position: absolute;
    cursor: pointer;
    position: relative;
    z-index: 10;
  }
  .burger_menu.active {
    z-index: 20 !important;
  }
  .burger_menu.active .bar:nth-child(2) {
    opacity: 0;
  }
  .burger_menu.active .bar:nth-child(1) {
    transform: translateY(12px) rotate(45deg);
  }
  .burger_menu.active .bar:nth-child(3) {
    transform: translateY(-12px) rotate(-45deg);
  }

  @media screen and (min-width: 1120px) {
    .navigation,
    .nav_menu {
      display: none;
    }
    .desktop_nav {
      position: fixed;
      display: flex;
      padding: var(--gap-16);
      background-color: var(--white-70);
      height: 60px;
      backdrop-filter: blur(4px);
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 10;
    }
    .desktop_nav_wrapper {
      max-width: var(--content-max);
      min-width: var(--content-min);
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: var(--gap-128);
    }
    .ul_left,
    .ul_right {
      display: flex;
      flex-direction: row;
      gap: var(--gap-128);
      padding-left: 0;
      /* margin-right: var(--gap-48); */
    }
  }
</style>
<script>
  const hamburger = document.querySelector(".burger_menu");
  const navMenu = document.querySelector(".nav_menu");

  hamburger.addEventListener("click", mobileMenu);

  function mobileMenu() {
    hamburger.classList.toggle("active");
    navMenu.classList.toggle("active");
  }
</script>
